<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:ui="weave.ui.*"
					label="{lang('Source')}" textAlign="right">
	<s:layout>
		<s:FormLayout gap="-10"/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import ehs.EHSTool;
			
			import weave.api.linkBindableProperty;
			[Bindable]
			private var _panel:EHSTool = null;
			
			private function labelShowButton(buttonToolTip:String):String{
				return lang('Show button "{0}"', lang(buttonToolTip));
			}
			
			override protected function createChildren():void{
				super.createChildren();
				
			}
			
			public function set target(panel:EHSTool):void{
				if (_panel)
					throw new Error(lang("target should not be set more than once"));				
				_panel = panel;
			}
			
			override protected function childrenCreated():void
			{
				super.childrenCreated();				
				
				
				
			}
			
			
		]]>
	</fx:Script>
	
	<s:FormItem label="{lang('Form Title:')}">
		<s:TextInput id="titleInput" textAlign="left"
					  width="100%"
					  toolTip="{lang('Entering a title here will override the automatic title generated by the Form.')}"/>
					  <!--creationComplete="linkBindableProperty(_panel.formTitle, event.target, 'text', 500);"	-->
	</s:FormItem>
	<s:FormItem label="{lang('Checklsit Source:')}">
		<!--creationComplete="linkBindableProperty(_panel.checkListSource, event.target, 'text', 500);"-->
		<s:TextArea id="sourceInput" textAlign="left"
					 width="100%" height="100%"
					 />	
	</s:FormItem>
	
</s:NavigatorContent>
